<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="8dp"
    android:background="@drawable/ic_launcher_background"
    android:layout_marginTop="8dp">

    <!-- Imagen de la pintura -->
    <ImageView
        android:id="@+id/painting_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:layout_marginEnd="8dp" />

    <!-- Contenedor para los textos -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Título de la pintura -->
        <TextView
            android:id="@+id/painting_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:fontFamily="sans-serif-medium" />

        <!-- Artista de la pintura -->
        <TextView
            android:id="@+id/painting_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#C7C7C7"
            android:paddingTop="2dp" />

        <!-- Descripción de la pintura -->
        <TextView
            android:id="@+id/painting_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:paddingTop="4dp" />
    </LinearLayout>
</LinearLayout>
